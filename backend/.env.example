# Django Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/agrisat_db
# Alternative format:
# DB_NAME=agrisat_db
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
# Alternative format:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# NASA API Keys
# Get your API key from: https://api.nasa.gov/
NASA_API_KEY=your-nasa-api-key-here

# NASA FIRMS API Key for fire data
# Get your API key from: https://firms.modaps.eosdis.nasa.gov/api/
NASA_FIRMS_API_KEY=your-firms-api-key-here

# Email Configuration (Optional - for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# CORS Configuration (for frontend integration)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# Security Settings (Production)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Sentry Configuration (Optional - for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# Time Zone
TIME_ZONE=UTC

# Language
LANGUAGE_CODE=en-us

# Logging Level
LOG_LEVEL=INFO

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880  # 5MB

# API Rate Limiting (if implemented)
# THROTTLE_ANON_RATE=100/hour
# THROTTLE_USER_RATE=1000/hour

# Cache Configuration
CACHE_TTL=300  # 5 minutes

# Pagination
PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Background Task Settings
CELERY_TASK_ALWAYS_EAGER=False  # Set to True for synchronous testing
CELERY_TASK_EAGER_PROPAGATES=True

# Weather Data Settings
WEATHER_DATA_RETENTION_DAYS=365
WEATHER_FETCH_INTERVAL_HOURS=6

# Satellite Data Settings
SATELLITE_DATA_RETENTION_DAYS=180
NDVI_PROCESSING_INTERVAL_DAYS=7

# Fire Alert Settings
FIRE_ALERT_BUFFER_KM=10
FIRE_ALERT_CHECK_INTERVAL_HOURS=6
FIRE_ALERT_RETENTION_DAYS=90

# Development Settings
# Set to True to enable Django Debug Toolbar
DEBUG_TOOLBAR=False

# Testing
# Set to True when running tests
TESTING=False